<% content_for(:html_title) {@pokemon.name}%>
<h1 style="display: flex; flex: 1; justify-content: center; margin: 0;"><%= @pokemon.name %></h1>

<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <tr>
    <th>Type</th>
    <td><%= @pokemon.type.name %></td>
  </tr>
  <tr>
    <th>Stat Total</th>
    <td><%= @pokemon.stat_total %></td>
  </tr>
  <tr>
    <th>HP</th>
    <td><%= @pokemon.HP %></td>
  </tr>
  <tr>
    <th>Attack</th>
    <td><%= @pokemon.attack %></td>
  </tr>
  <tr>
    <th>Defense</th>
    <td><%= @pokemon.defense %></td>
  </tr>
  <tr>
    <th>Speed</th>
    <td><%= @pokemon.speed %></td>
  </tr>
  <tr>
    <th>First Ability</th>
    <td><%= @pokemon.first_ability %></td>
  </tr>
  <tr>
    <th>Second Ability</th>
    <td><%= @pokemon.second_ability %></td>
  </tr>
  <tr>
    <th>Hidden Ability</th>
    <td><%= @pokemon.hidden_ability %></td>
  </tr>
</table>

<%= link_to "Back to all pokemons", pokemons_path %>
