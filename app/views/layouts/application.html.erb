<style>
  .title {
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 0;
  }
</style>

<!DOCTYPE html>
<html>
  <head>
    <title>Home of Pokemons</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css">
  </head>

  <body>
    <section class="container">
      <div class="title">
        <h1 class="panel-heading title is-1 has-text-link">Home of Pokemons</h1>
      </div>
        <%= render partial:'shared/navbar'%>
      </div>
      <%= form_with(url: search_pokemons_path, method: :get, local: true) do %>
        <div class="field is-grouped mb-5">
          <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Search for pokemons...") %>
        </div>
        <div class="control">
          <%= submit_tag("search", class: "button is-primary") %>
        </div>
      <% end %>
      <%= yield %>
    </section>
  </body>
</html>
